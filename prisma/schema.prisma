generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Materia {
  codigo String @id
  nome   String

  professors Turma[]
}

model Professor {
  email String @id
  nome  String
  bio   String
  fto   String

  materias Turma[]
  avaliacoes Avaliacao[]
}


model Turma {
  materia     Materia   @relation(fields: [materiaId], references: [codigo])
  materiaId   String
  professor   Professor @relation(fields: [professorId], references: [email])
  professorId String

  @@id([materiaId, professorId]) // Chave prim√°ria composta por materiaId e professorId
  @@map("turmas")
}

model Avaliacao {
  id                   Int    @id @default(autoincrement())
  professorId          String
  didatica             Int
  metodologia          Int
  coerenciaDeAvaliacao Int
  disponibilidade      Int
  materiaisDeApoio     Int

  professor            Professor @relation(fields: [professorId], references: [email])
}

