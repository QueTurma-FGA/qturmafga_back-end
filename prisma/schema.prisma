generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Materia {
  codigo String @id
  nome   String

  professors Turma[]

  // @@map("materias")
}

model Professor {
  email String @id
  nome  String
  bio   String
  fto   String

  materias Turma[]

  // @@map("professores")
}

model Turma {
  materia     Materia   @relation(fields: [materiaId], references: [codigo])
  materiaId   String
  professor   Professor @relation(fields: [professorId], references: [email])
  professorId String

  Avaliacao Avaliacao[]

  @@id([materiaId, professorId])
  @@map("turmas")
}

model Avaliacao {
  id                   Int    @id 
  turma                Turma  @relation(fields: [professorId, materiaId], references: [professorId, materiaId])
  materiaId            String
  professorId          String
  didatica             Int
  metodologia          Int
  coerenciaDeAvaliacao Int
  disponibilidade      Int
  materiaisDeApoio     Int

  @@map("avaliacoes")
}
